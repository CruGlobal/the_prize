		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<a href="<%= page_path('flow/challenge') %>" class="btn btn-lg btn-default btn-block"><%= I18n.t 'flow.more.answer1' %></a>
				<a href="<%= page_path('flow/thanks') %>" class="btn btn-lg btn-default btn-block"><%= I18n.t 'flow.more.answer2' %></a>
