<!DOCTYPE html>
<html>
<head>
	<title><%= t 'title' %> <%= yield(:page_title) %></title>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<link href="<%= image_url("favicon.ico") %>" rel="shortcut icon" type="image/x-icon">
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</head>
<body class="<%= yield(:page) %>">
	<div class="background"></div>
	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="container">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-menu">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand lowercase" href="<%= root_path %>"><%= image_tag "logo.png" %><%= t 'title' %></a>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="main-menu">
				<ul class="nav navbar-nav navbar-right">
					<li class="<%= is_active? root_path %>"><%= link_to t('menu.home'), root_path %></li>
					<li class="<%= is_active? page_path('about') %>"><%= link_to t('menu.about'), page_path('about') %></li>
					<li class="<%= is_active? page_path('the_stars') %>"><%= link_to t('menu.the_stars'), page_path('the_stars/kaka') %></li>
					<li class="<%= is_active? page_path('resources') %>"><%= link_to t('menu.resources'), page_path('resources') %></li>
					<% if locale_menu.empty? %>
						<li class="f16"><a href="<%= page_path('language') %>"><i class="flag <%= current_language.country.downcase %>"></i><%= current_language.name %></a></li>
					<% else %>
						<li class="dropdown <%= is_active? page_path('language') %>">
							<a href="#" class="dropdown-toggle f16" data-toggle="dropdown"><i class="flag <%= current_language.country.downcase %>"></i><%= current_language.name %></a>
		          <ul class="dropdown-menu f16 locale_menu">
		          	<% locale_menu.each do |locale| %>
                  <!-- data-no-turbolink is not working -->
                  <li><a onClick="window.location.href = $(this).attr('href');" href="<%= url_for(params.merge(:locale => locale.locale)) %>" class="dropdown-toggle" data-toggle="dropdown"><i class="flag <%= locale.country.downcase %>"></i><%= locale.country %></a></li>
		            <% end %>
		            <li class="divider"></li>
		            <li><a href="<%= page_path('language') %>"><%= t 'menu.see_all' %></a></li>
		          </ul>
						</li>
	        <% end %>
					<li>
						<a href="#" class="social"><%= fa_stacked_icon "facebook inverse", base: "circle" %></a>
						<a href="#" class="social"><%= fa_stacked_icon "twitter inverse", base: "circle" %></a>
						<a href="#" class="social"><%= fa_stacked_icon "google-plus inverse", base: "circle" %></a>
					</li>
				</ul>
			</div><!-- /.navbar-collapse -->
		</div><!-- /.container-fluid -->
	</nav>
	<div class="content container">
		<div class="row">
			<div class="col-md-10 col-md-offset-1">
				<%= yield %>
			</div>
		</div>
	</div>
	<footer>
		<div class="container">
			<%= t 'footer.copyright' %> Â© <%= Time.now.year %> <%= t 'title' %>
		</div>
	</footer>

  <a title="Web Statistics" href="http://clicky.com/100728691"><img alt="Web Statistics" src="//static.getclicky.com/media/links/badge.gif" border="0" /></a>
  <script src="//static.getclicky.com/js" type="text/javascript"></script>
  <script type="text/javascript">try{ clicky.init(100728691); }catch(e){}</script>
  <noscript><p><img alt="Clicky" width="1" height="1" src="//in.getclicky.com/100728691ns.gif" /></p></noscript>

	<script type="text/javascript" src="//use.typekit.net/nst6mhc.js"></script>
	<script type="text/javascript" src="//a.vimeocdn.com/js/froogaloop2.min.js"></script>
	<script type="text/javascript">try{Typekit.load();}catch(e){}</script>

</body>
</html>
